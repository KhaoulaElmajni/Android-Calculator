<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/power"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="^"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/abs"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="Abs"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sqrt"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="√"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pi"
                style="@style/OpBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="ℼ"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="7"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eigth"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nine"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="9"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                style="@style/OpBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="+"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="4"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/five"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="5"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/six"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="6"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sub"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="-"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="1"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/two"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="2"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/three"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiply"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="x"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/zero"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/dot"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="."
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/percent"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="%"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/divide"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="/"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <Button
                android:id="@+id/clear"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="clear"
                android:text="AC"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/parenthesis"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:onClick="addCharacter"
                android:text="()"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equal"
                style="@style/DigitBtn"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:onClick="calculate"
                android:text="="
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>